{
    "parser": "babel-eslint",
    "plugins": [
        "prettier"
    ],
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "root": true,
    "env": {
        "node": true,
        "browser": false
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "semi": true,
                "trailingComma": "all",
                "singleQuote": true,
                "proseWrap": "always"
            }
        ],
        "import/extensions": [
            0
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id"
                ]
            }
        ]
    }
}